<assembly>
	<id>src</id>
	<formats>
		<format>tar.gz</format>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>true</includeBaseDirectory>
	<dependencySets>
		<dependencySet>
			<outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
			<includes>
				<include>org.igniterealtime:smack</include>
				<include>org.igniterealtime:smack-bosh</include>
				<include>org.igniterealtime:smackx</include>
				<include>org.igniterealtime:smackx-jingle</include>
				<include>org.igniterealtime:smackx-debug</include>
			</includes>
		</dependencySet>
		<dependencySet>
			<outputDirectory>javadoc</outputDirectory>
			<unpack>true</unpack>
			<includes>
				<include>org.igniterealtime:smack-parent</include>
			</includes>
		</dependencySet>
	</dependencySets>
	<fileSets>
		<fileSet>
			<directory>../</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>**/pom.xml</include>
				<include>src/**/**</include>
				<include>smack/src/**/**</include>
				<include>smack-bosh/src/**/**</include>
				<include>smack-sample/src/**/**</include>
				<include>smack-test/src/**/**</include>
				<include>smackx/src/**/**</include>
				<include>smackx-test/src/**/**</include>
				<include>smackx-debug/src/**/**</include>
				<include>smackx-jingle/src/**/**</include>
				<include>smackx-jingle-test/src/**/**</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>../documentation</directory>
			<outputDirectory>documentation</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>target/classes</directory>
			<outputDirectory>/</outputDirectory>
		</fileSet>
	</fileSets>
</assembly>
