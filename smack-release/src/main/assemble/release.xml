<assembly>
	<id></id>
	<formats>
		<format>tar.gz</format>
		<format>zip</format>
	</formats>
	<dependencySets>
		<dependencySet>
			<outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
			<includes>
				<include>org.igniterealtime:smack</include>
				<include>org.igniterealtime:smackx</include>
				<include>org.igniterealtime:smackx-jingle</include>
				<include>org.igniterealtime:smackx-debug</include>
			</includes>
		</dependencySet>
		<dependencySet>
			<outputDirectory>javadoc</outputDirectory>
			<unpack>true</unpack>
			<includes>
				<include>org.igniterealtime:smack-parent</include>
			</includes>
		</dependencySet>
	</dependencySets>
	<fileSets>
		<fileSet>
			<directory>../documentation</directory>
			<outputDirectory>documentation</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>target/classes</directory>
			<outputDirectory>/</outputDirectory>
			<excludes>
				<exclude>source-build.html</exclude>
			</excludes>
		</fileSet>
	</fileSets>
</assembly>
